{{! app/templates/hex-grid.hbs - Revised for dynamic SVG sizing }}
<div class="w-full h-full overflow-auto" id="svg-scroll-container"> {{!-- Added ID for potential direct manipulation if needed, and ensure overflow:auto --}}
    {{#if currentGridWidth}}
        {{#if currentGridHeight}}
            <svg
                id="hexGridSvg"
                {{!-- Width and Height will be set dynamically by ui.js based on zoom --}}
                viewBox="0 0 {{svgViewBoxWidth}} {{svgViewBoxHeight}}" {{!-- ViewBox still changes for zoom effect --}}
                preserveAspectRatio="xMidYMid meet" 
                class="block" 
                aria-label="Hexagonal map grid"
                style="transform-origin: 0 0;" {{!-- Helps if we use CSS transform scale later --}}
            >
                {{#each hexGridRenderData}}
                    {{> hexagon . }}
                {{/each}}
            </svg>
        {{else}}
            <p class="text-gray-400">Grid height is zero. Nothing to display.</p>
        {{/if}}
    {{else}}
         <p class="text-gray-400">Grid width is zero. Nothing to display.</p>
    {{/if}}
</div>